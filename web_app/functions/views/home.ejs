  <body>
    <div class="container">

      <h1>MK4 Poll</h1>

      <p>Add Engine: <input id="addEngine" /></p>
      <button
        class='btn btn-primary'
        onclick={addEngine()}
      >
        Submit
      </button>
      <!--using ejs tags below to incorporate js -->
      <div class="row">
        <% var keys = Object.keys(engines) %>
        <% keys.forEach(function(key) { %>

          <% var allUsers %>
          <% if (engines[key].votes) { %>
          <% allUsers = Object.keys(engines[key].votes) %>
          <% } else { %>
          <% allUsers = [] %>
          <% } %>

          <div class="col s6 m6 l6">
            <div class="card blue-grey darken-1">
              <div class="card-content white-text">
                <span class="card-title"><%= engines[key].name %></span>
                <p>Votes: <%= allUsers.length %></p>
                </div>
                <div class="card-action">
                <button onclick={upvote("<%= key %>")} class="btn">UpVote<i class="material-icons">arrow_drop_up</i>
</button>
                <button onclick={downvote("<%= key %>")} class="btn">DownVote<i class="material-icons">arrow_drop_down</i>
</button>
              </div>
            </div>
          </div>
        <%  })%>
      </div>

      <img id="google-pic" src="" />

      <button
        class="btn btn-primary"
        id='google-signin'
        onclick={signInWithGoogle()}
      >
        Sign In With Google
      </button>

      <button
        class="btn btn-primary"
        id="signout"
        onclick={signOut()}
        style="display: none; visibility: hidden;"
      >
        Sign Out
      </button>

    </div>

    <script src="js/firebaseAuth.js"></script>
    <script src="js/firebaseVoting.js"></script>

    <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="js/materialize.js"></script>

    <div class="container">
    <form method="POST">

      <p>Testing Text Box: <input name="text" /></p>
      <button type="submit">Submit</button>

    </form>
    </div>

  </body>
